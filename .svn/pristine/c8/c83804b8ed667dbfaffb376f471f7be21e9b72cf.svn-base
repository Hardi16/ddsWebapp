.mainContainer{
    background-color: black;
    width:100%;
    height:100vh ;
    color:white;
    display:flex;
    justify-content: center;
    align-items: center;
    padding: 15px;
}
.loginCard{
    background-color: #0f0f0f;
    border: 1px solid rgba(33,48,247,0.5);
    width: 28rem;
    height:  28rem;
    padding: 30px 15px;    
    border-radius: 80px;
}
.img{
    width: 150px;
    margin:30px 0 60px 0;
}
.title{
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.loginCard label{
    font-size: 18px;
    font-weight:500;
    text-transform: uppercase;
}
.loginCard .form-control{
    font-size: 18px!important;
    background-color: #cac7c7!important;
    height: 55px!important;
}
@media only screen and (max-width: 600px)  {
.mainContainer  {
    padding: 15px;
}
.loginCard{
    border-radius: 30px;
    height: auto;
}
.title img{
    margin-bottom: 20px;
}
}